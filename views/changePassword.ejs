<html>
  <head>
    <%- include("./components/HEADS.ejs")%>
    <script defer src="../js/changePassword.js"></script>
    <title>Code Me : Change Password</title>
  </head>
  <body>
    <%- include("./components/NAVBAR.ejs")%>
    <div class="container mt-5">
      <h4 class="text-center mb-3">🚦 Change Password</h4>
      <form id="form" class="row g-3" method="post" autocomplete="off">
        <div class="input-group">
          <%if(locals.user.socialOnly){%>
          <div class="input-group mb-3">
            <span class="input-group-text" style="width: 150px"
              ><%=locals.user.oAuth%> Login
            </span>
            <input
              id="oldPassword"
              class="form-control"
              type="password"
              placeholder="You don't need a current password"
              disabled
              readonly
              value=""
            />
          </div>
          <%}else{%>
          <div class="input-group mb-3">
            <span class="input-group-text">Current Password</span>
            <input
              id="oldPassword"
              name="currentPassword"
              type="password"
              class="form-control"
              placeholder="<%=locals.messages.pwdCheck?'❌ Password doesn\'t match':'please'%>"
              aria-label="Server"
              required
            />
          </div>
          <%}%>
          <div class="input-group mb-3">
            <span class="input-group-text" style="width: 150px"
              >New Password</span
            >
            <input
              id="newPassword1"
              name="newPassword1"
              type="password"
              class="form-control"
              placeholder="Please write a new password"
              aria-label="Server"
              required
            />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text" style="width: 150px"
              >Confirm Password
            </span>
            <input
              id="newPassword2"
              name="newPassword2"
              type="password"
              class="form-control"
              placeholder="Please verify the new password"
              aria-label="Server"
              required
            />
          </div>
          <button type="submit" class="btn btn-danger">SUBMIT</button>
          <span id="warning" class="message" style="margin-left: 10px"></span>
        </div>
      </form>
    </div>
  </body>
</html>
