<div
  class="mb-3"
  style="
    border-right: 1px solid rgba(90, 40, 40, 0.1);
    border-bottom: 1px solid rgba(90, 40, 40, 0.1);
    border-image: initial;
    border-top: none;
    border-left: none;
    border-radius: 20px;
    background-color: aliceblue;
    box-shadow: rgba(0, 0, 0, 0.2) 6px 6px 6px;
    padding: 10px 20px;
  "
>
  <div class="mb-3">
    <img
      src="<%=comment.avatar%>"
      style="width: 30px; height: 30px; border-radius: 50%; margin-right: 15px"
    />
    <span><%=comment.owner%></span><span><%=comment.createdAt%></span>
  </div>
  <p><%=comment.content%></p>
</div>
