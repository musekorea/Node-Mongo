<!-- BOOTSTRAP NAV BAR -->
<nav class="navbar navbar-expand-sm navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">LINA.com</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item scrollScope about">
          <a class="nav-link active" aria-current="page" href="/#about"
            >About Me</a
          >
        </li>
        <li class="nav-item scrollScope skills">
          <a class="nav-link active" aria-current="page" href="/#skills"
            >Skills</a
          >
        </li>
        <li class="nav-item scrollScope works">
          <a class="nav-link active" aria-current="page" href="/#works"
            >Works</a
          >
        </li>

        <li class="nav-item">
          <a
            class="nav-link active"
            aria-current="page"
            href="/community/blog/1"
            >Community</a
          >
        </li>

        <%if(locals.isLoggedIn){%>
        <li class="nav-item">
          <a
            class="nav-link active"
            aria-current="page"
            href="/user/userProfile/<%=locals.user.nickname%>"
          >
            <%if(locals.user.avatar===""){%>
            <span>👽 <%=locals.user.nickname%></span>
            <%}else{%>
            <img
              src="<%=locals.user.avatar%>"
              alt="avatar"
              style="
                width: 30px;
                height: 30px;
                border-radius: 50%;
                margin-right: 2px;
              "
            />
            <%=locals.user.nickname%> <%}%></a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user/logout"
            >Logout</a
          >
        </li>
        <%}else{%>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user/login"
            >LOGIN</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/user/join"
            >JOIN</a
          >
        </li>
        <%}%>
      </ul>
      <form
        id="searchForm"
        class="d-flex"
        action="/community/search"
        method="get"
      >
        <input
          id="searchInput"
          name="value"
          class="form-control me-2"
          type="search"
          placeholder="🔍 Search"
          aria-label="Search"
        />
        <button id="searchBtn" class="btn btn-outline-success" type="submit">
          Search
        </button>
      </form>
    </div>
  </div>
</nav>
