<html>
  <head>
    <%- include("./components/HEADS.ejs")%>
    <title>Code Me : Join</title>
  </head>
  <body>
    <%- include("./components/NAVBAR.ejs")%>
    <!--BOOTSTRAP JOIN FROM  -->
    <div class="container mt-5" }>
      <form
        action="/user/join"
        id="joinForm"
        class="row g-3"
        autocomplete="on"
        method="POST"
      >
        <div class="col-md-6">
          <label for="joinEmail" class="form-label"
            >Email <%if(locals.emailError){%>
            <span class="message"><%=emailError%></span>
            <%}%>
          </label>
          <input
            type="email"
            class="form-control"
            name="joinEmail"
            id="joinEmail"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="joinPassword" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            name="joinPassword"
            id="joinPassword"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="joinNickname" class="form-label"
            >Nickname <%if(locals.nicknameError){%>
            <span class="message"><%=nicknameError%></span>
            <%}%>
          </label>
          <input
            type="text"
            class="form-control"
            name="joinNickname"
            id="joinNickname"
            required
          />
        </div>
        <div class="col-md-2">
          <label for="joinGender" class="form-label">Gender</label>
          <select
            id="joinGender"
            class="form-select"
            name="joinGender"
            required
          >
            <option selected>Choose...</option>
            <option value="male">Male</option>
            <option value="female">Female...</option>
          </select>
        </div>
        <div class="col-md-4">
          <label for="joinBirth" class="form-label">Birth</label>
          <input
            type="date"
            class="form-control"
            name="joinBirth"
            id="joinBirth"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="joinAvatar" class="form-label">Avatar</label>
          <input
            type="file"
            class="form-control"
            name="joinAvatar"
            id="joinAvatar"
          />
        </div>
        <div class="col-12">
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              id="gridCheck"
              required
            />
            <label class="form-check-label" for="gridCheck">
              Check me out
            </label>
          </div>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
      </form>
    </div>
    <!--BOOTSTRAP JOIN FROM  -->
  </body>
</html>
